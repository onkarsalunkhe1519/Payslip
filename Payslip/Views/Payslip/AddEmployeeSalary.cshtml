@model EmployeeSalaries

<form method="post">
    <div class="form-group">
        <label for="UserId">Select Employee</label>
        <!-- Using asp-for for model binding -->
        <select asp-for="UserId" class="form-control" required>
            <option value="">-- Select Employee --</option>
            @foreach (var user in ViewBag.Users as SelectList)
            {
                <option value="@user.Value">@user.Text</option>
            }
        </select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="BaseSalary">Basic Salary</label>
        <!-- Using asp-for for model binding -->
        <input type="number" step="0.01" asp-for="BasicSalary" class="form-control" required />
        <span asp-validation-for="BasicSalary" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Salary</button>
</form>
